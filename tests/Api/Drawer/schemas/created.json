{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "identifier": {
      "type": "string",
      "format": "uuid",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-7[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$",
      "description": "UUID v7 identifier"
    },
    "emailAddress": {
      "type": "string",
      "format": "email",
      "description": "Email address of the sock"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Auto-generated unique name"
    },
    "style": {
      "type": "null",
      "description": "Style is null on creation"
    }
  },
  "required": ["identifier", "emailAddress", "name", "style"],
  "additionalProperties": false
}
